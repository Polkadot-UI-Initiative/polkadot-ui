{
  "name": "polkadot-ui",
  "version": "0.10.1",
  "description": "CLI for installing Polkadot UI components with automatic API setup",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "polkadot-ui": "./bin/polkadot-ui.mjs"
  },
  "files": [
    "bin/**/*",
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:mcp": "tsx src/mcp/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "polkadot",
    "web3",
    "ui",
    "components",
    "cli",
    "substrate"
  ],
  "author": "Polkadot UI Initiative",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polkadot-UI-Initiative/polkadot-ui.git",
    "directory": "packages/cli"
  },
  "homepage": "https://polkadot-ui.com",
  "bugs": "https://github.com/Polkadot-UI-Initiative/polkadot-ui/issues",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.6.1",
    "execa": "^5.1.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "posthog-node": "^5.6.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": false
}
