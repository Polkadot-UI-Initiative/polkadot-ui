{
  "name": "polka-ui",
  "version": "0.3.0",
  "description": "CLI for installing Polkadot UI components with automatic API setup",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "polka-ui": "./bin/dot-ui.mjs"
  },
  "files": [
    "bin/**/*",
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "polkadot",
    "web3",
    "ui",
    "components",
    "cli",
    "substrate"
  ],
  "author": "Polkadot UI Initiative",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polkadot-UI-Initiative/dot-ui.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/Polkadot-UI-Initiative/dot-ui",
  "bugs": "https://github.com/Polkadot-UI-Initiative/dot-ui/issues",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.6.1",
    "execa": "^5.1.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "posthog-node": "^4.18.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": false
}
